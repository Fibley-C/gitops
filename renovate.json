{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "argocd": {
    "managerFilePatterns": [
      "/apps/.+\\.yaml$/"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^apps/.*\\.ya?ml$/"
      ],
      "matchStrings": [
        "repoURL:\\s*(?<registry>oci://[^\\s]+)[\\s\\S]*?targetRevision:\\s*\"(?<currentValue>[^\\s]+)\""
      ],
      "datasourceTemplate": "helm",
      "depNameTemplate": "{{registry}}",
      "registryUrlTemplate": "{{registry}}"
    }
  ]
}
