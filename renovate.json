{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "argocd": {
    "managerFilePatterns": [
      "/apps/.+\\.yaml$/"
    ]
  },
  "regexManagers": [
    {
      "fileMatch": ["^apps/.*\\.ya?ml$"],
      "matchStrings": [
        "repoURL:\\s*(?<registry>oci://[^\\s]+)[\\s\\S]*?targetRevision:\\s*\"(?<currentValue>[^\\s]+)\""
      ],
      "datasourceTemplate": "helm",
      "depNameTemplate": "{{registry}}",
      "registryUrlTemplate": "{{registry}}"
    }
  ]
}
