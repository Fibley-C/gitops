{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "argocd": {
    "managerFilePatterns": [
      "/apps/.+\\.yaml$/"
    ]
  },
  "packageRules": [
    {
      "matchFiles": [
        "apps/n8n.yaml"
      ],
      "enabledManagers": [
        "helm"
      ]
    }
  ]
}
